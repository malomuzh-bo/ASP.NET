@{
}
@model Product

<div class="mt-3 align-items-center">
	<div id="carouselExampleControlsNoTouching" class="carousel slide infocarousel" data-bs-touch="false">
		<div class="carousel-inner">
			<div class="carousel-item active">
				<img src="@ViewBag.Photos[0].PathName" class="d-block w-100" alt="...">
			</div>
			@for (int i = 1; i < @ViewBag.Photos.Count; i++)
			{
				<div class="carousel-item">
					<img src="@ViewBag.Photos[i].PathName" class="d-block w-100" alt="...">
				</div>
			}
		</div>
		<button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="prev">
			<span class="carousel-control-prev-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Previous</span>
		</button>
		<button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControlsNoTouching" data-bs-slide="next">
			<span class="carousel-control-next-icon" aria-hidden="true"></span>
			<span class="visually-hidden">Next</span>
		</button>
	</div>
	<br />
	<ul>
		Product info
		<li>Id: @Model.Id</li>
		<li>Product name: @Model.Name</li>
		<li>Amount: @Model.Amount</li>
		<li>Category: @Model.ProductCategory</li>
		<li>Info: @Model.Info</li>
		<li>Price: @Model.Price</li>
	</ul>
</div>
